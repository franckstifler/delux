doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(http-equiv='x-ua-compativle', content='ie=edge')
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons',rel='stylesheet')
        //link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css')
    body
        nav
            .nav-wrapper
                a(href='#').brand-logo Delux
                a.button-collapse(href='#', data-activates='mobile')
                    i.material-icons menu
                ul.hide-on-med-and-down.right
                    li
                        a(href='/')
                            span Home
                    li
                        a(href='/admin/promotions')
                            span Promotions
                    li
                        a(href='/admin/users')
                            span Users
                    if (user)
                        li
                            a(href='/logout')
                                span Logout #{user.name}
                ul.side-nav#mobile
                    li
                        a(href='/')
                            span Home
                    li
                        a(href='/admin/promotions')
                            span Promotions
                    if (user)
                        li
                            a(href='/logout')
                                span Logout #{user.name}
        .container
            each error in errors
                p.red.white-text.center #{error}
            each info in infos
                p.blue.white-text.center #{info}
        block content


        include footer